
choice
  prompt "DMA Flavour"
  default MOD_DMA_ZERO_COPY if HEAP_HAVE_FIXED_DATA_PTR
  
  config MOD_DMA_ZERO_COPY
    bool "Zero copy (fastest)"
    depends on HEAP_HAVE_FIXED_DATA_PTR
    help
      Fastest mode with zero overhead of copying data

